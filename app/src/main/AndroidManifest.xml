<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- optionally ACCESS_COARSE_LOCATION if you want it -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimeTacker">

        <activity
            android:name=".activity.ui.theme.Month"
            android:exported="false"
            android:label="@string/title_activity_month"
            android:theme="@style/Theme.TimeTacker" />
        <activity
            android:name=".activity.SplashScreen"
            android:exported="true"
            android:label="Time Tracker"
            android:theme="@style/Theme.TimeTacker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Daily"
            android:exported="false"
            android:label="@string/title_activity_daily"
            android:theme="@style/Theme.TimeTacker" />
        <activity
            android:name=".activity.Helper"
            android:exported="false"
            android:label="@string/title_activity_helper"
            android:theme="@style/Theme.TimeTacker" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TimeTacker" />
    </application>

</manifest>